@model Seller
@{
    ViewData["Title"] = "Edit Buyers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name = "_Notification"/>

<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/css/site.css">
</head>

<form method="post">
    <div class=" border p-3 mt-4">
        <h2 class = text-primary>Edit Sellers</h2>
        <hr/>
    </div>

    <div class="mb-3">
            <label asp-for="Name"></label>
            <input  asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
      <div  class="mb-3">
            <label asp-for="Location"></label>  
            <span class="fa fa-2x fa-map-marker" id = "mapIcon"onclick="getPreciseLocation()"></span>
            <input asp-for="Location" class="form-control" id ="buyerLocation" placeholder="Click on the icon"  aria-required="true" />
             <span asp-validation-for="Location" class="text-danger"></span>
          </div>
    <div  class="mb-3">
          <select asp-for="Type" class="form-control sellerType">
                  <option >Fruits</option>
                  <option >Vegetables</option>>
                  <option >Carpets</option>>
                  <option >Flowers</option>>
                  <option >Clothes</option>>
             </select>
        </div>

       <button type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
           <a asp-controller="Admin" asp-action="Seller" class = "btn btn-secondary" style="width:150px">
                Back to list
           </a>
</form>

<script> 
  'use strict';
function getPreciseLocation() {
    if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(saveExactPosition)
    } else {
        alert("Geolocation is not supported");
    }
}
function saveExactPosition(position) {
    console.log(position.coords.longitude);
    alert(+ position.coords.latitude + "  " + position.coords.longitude);    
    document.getElementById("buyerLocation").value = position.coords.latitude + " " + position.coords.longitude;
    
}
</script>