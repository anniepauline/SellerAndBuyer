@model IEnumerable<Seller>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Seller Info";
}
<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/css/site.css">
</head>
<div class=" border p-3 mt-4">
<div class="row pb-2">
    <h2 class="text-primary">Seller's List</h2>
    <hr/>
</div>

<br/>
<table class =" table-bordered table-striped" style = "width:100%">
<thead>
    <tr>
        <th>
            Seller Id
        </th>
        <th>
            Seller Name
        </th>
        <th>
            Item
        </th>
        <th>
           Location
        </th>
        <th>
            Date and Time
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var obj in Model)
    {
        <tr>
            <td width="8%">
                @obj.Id
            </td>
          
            <td width="10%">
                @obj.Name
            </td>
            <td width="10%">
                @obj.Type
            </td>
            <td width="20%">
                @obj.Location
            </td>
            <td width="20%">
                @obj.TimeStamp
            </td>  
            <td>
            <div class ="w-75 btn-group role="group">
                <a asp-controller="Admin" asp-action="EditSellers" asp-route-id="@obj.Id"
                class = "btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> &nbsp;Edit</a>
                
                 <a asp-controller="Admin" asp-action="DeleteSellers" asp-route-id="@obj.Id"
                 class = "btn btn-denger mx-2"><i class="bi bi-trash"></i> &nbsp;Delete</a>
            </div>
            </td>
        </tr>
    }
</tbody>
</table>
</div>