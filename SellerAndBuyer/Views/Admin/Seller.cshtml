@model IEnumerable<Seller>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Seller Info";
}
<div class="container p-3">
<div class=" = "row pt-4">
<div class="col-2">
    <h2 class=" = "text-primary>Seller's List</h2>
</div>

</div> 
<br/><br/>
<table class =" table-bordered table-striped" style = "width:100%">
<thead>
    <tr>
        <th>
            Seller Id
        </th>
        <th>
            Seller Name
        </th>
        <th>
            Item
        </th>
        <th>
           Location
        </th>
        <th>
            Date and Time
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var obj in Model)
    {
        <tr>
            <td width="8%">
                @obj.Id
            </td>
          
            <td width="10%">
                @obj.Name
            </td>
            <td width="10%">
                @obj.Type
            </td>
            <td width="20%">
                @obj.Location
            </td>
            <td width="20%">
                @obj.TimeStamp
            </td>  
            <td>
            <div class ="w-75 btn-group role="group">
                <a asp-controller="Admin" asp-action="EditSellers" asp-route-id="@obj.Id"
                class = "btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                
                 <a asp-controller="Admin" asp-action="DeleteSellers" asp-route-id="@obj.Id"
                 class = "btn btn-denger mx-2"><i class="bi bi-trash3-fill"></i>Delete</a>

            </div>
            </td>
        </tr>
    }
</tbody>
</table>
</div>